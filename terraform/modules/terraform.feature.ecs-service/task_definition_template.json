[
    {
        "name": "${service_name}",
        "image": "${service_container_image_url}",
        "cpu": ${service_cpu},
        "memoryReservation": ${service_memory},
        "essential": true,
        "portMappings": [
            {
                "containerPort": ${exposed_port}
            }
        ],
        "environment": [${service_env_variables}],
        "secrets": [${service_secrets}],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${log_group}",
                "awslogs-region": "${aws_region}",
                "awslogs-stream-prefix": "${stream_prefix}"
            }
        }
    }
]
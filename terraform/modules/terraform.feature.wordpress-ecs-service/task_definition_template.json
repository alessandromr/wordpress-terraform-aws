[
    {
        "name": "${service_name}-wordpress",
        "image": "${service_container_image_url_wordpress}",
        "cpu": ${service_cpu_wordpress},
        "memoryReservation": ${service_memory_wordpress},
        "essential": true,
        "environment": [${service_env_variables_wordpress}],
        "secrets": [${service_secrets_wordpress}],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${log_group}",
                "awslogs-region": "${aws_region}",
                "awslogs-stream-prefix": "${stream_prefix}"
            }
        },
        "mountPoints": [
            {
                "sourceVolume": "${efs_volume_id}",
                "containerPath": "${efd_volume_mount_path}",
                "readOnly": false
            }
        ]
    },
    {
        "name": "${service_name}-nginx",
        "image": "${service_container_image_url_nginx}",
        "cpu": ${service_cpu_nginx},
        "memoryReservation": ${service_memory_nginx},
        "essential": true,
        "portMappings": [
            {
                "containerPort": ${exposed_port}
            }
        ],
        "environment": [${service_env_variables_nginx}],
        "secrets": [${service_secrets_nginx}],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${log_group}",
                "awslogs-region": "${aws_region}",
                "awslogs-stream-prefix": "${stream_prefix}"
            }
        },
        "mountPoints": [
            {
                "sourceVolume": "${efs_volume_id}",
                "containerPath": "${efd_volume_mount_path}",
                "readOnly": true
            }
        ]
    }
]